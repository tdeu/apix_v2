{
  "name": "apix-ai",
  "version": "2.0.2",
  "description": "Enterprise AI-powered Hedera development assistant with code composition and live blockchain validation",
  "main": "dist/cli/index.js",
  "bin": {
    "apix": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "build:strict": "tsc --noEmit --strict",
    "dev": "nodemon --exec ts-node src/cli/index.ts",
    "test": "jest",
    "test:types": "npm run build:check",
    "test:claude": "npx ts-node scripts/test-with-claude.ts",
    "start": "node dist/cli/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "audit:mocks": "./scripts/audit-mocks.sh",
    "precommit": "npm run build:check && npm run lint",
    "validate:env": "node -e \"console.log('Environment check:'); ['OPENAI_API_KEY', 'HEDERA_ACCOUNT_ID', 'HEDERA_PRIVATE_KEY'].forEach(key => console.log(key + ':', process.env[key] ? '✅ Set' : '❌ Missing'));\"",
    "apix": "npx ts-node src/cli/index.ts",
    "apix:help": "npm run apix -- --help",
    "apix:health": "npm run apix -- health --quick",
    "apix:analyze": "npm run apix -- analyze --directory .",
    "apix:add:hts": "npm run apix -- add hts --name TestToken --symbol TEST",
    "apix:add:wallet": "npm run apix -- add wallet --provider hashpack",
    "apix:recommend": "npm run apix -- recommend --industry pharmaceutical",
    "apix:validate": "npm run apix -- validate --testnet",
    "apix:generate": "npm run apix -- generate smart-contract --industry pharmaceutical --regulation FDA-21CFR11",
    "apix:chat": "npm run apix -- chat",
    "apix:status": "npm run apix -- status",
    "apix:init": "npm run apix -- init",
    "apix:create-token": "npm run apix -- create-token --name 'DemoToken' --symbol 'DEMO' --supply 1000000",
    "apix:validate:full": "npm run apix -- validate --testnet --enterprise --performance",
    "install:global": "npm run build && npm install -g .",
    "link:local": "npm run build && npm link",
    "unlink": "npm unlink -g apix-ai",
    "cli:help": "npx ts-node src/cli/index.ts --help",
    "cli:health": "npx ts-node src/cli/index.ts health --quick",
    "cli:analyze": "npx ts-node src/cli/index.ts analyze --directory .",
    "cli:test": "npx ts-node src/cli/index.ts"
  },
  "keywords": [
    "hedera",
    "blockchain",
    "cli",
    "ai",
    "integration"
  ],
  "author": "Moustapha Diop <moustapha.diop@7digitslab.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tdeu/apix.git"
  },
  "bugs": {
    "url": "https://github.com/tdeu/apix/issues"
  },
  "homepage": "https://github.com/tdeu/apix#readme",
  "dependencies": {
    "@hashgraph/hedera-wallet-snap": "^0.6.2",
    "@hashgraph/sdk": "latest",
    "@langchain/anthropic": "^0.3.0",
    "@langchain/core": "^0.3.0",
    "@langchain/openai": "^0.3.0",
    "@walletconnect/qrcode-modal": "^1.8.0",
    "@walletconnect/sign-client": "^2.21.8",
    "@walletconnect/utils": "^2.21.8",
    "axios": "^1.6.0",
    "blessed": "^0.1.81",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "configstore": "^7.1.0",
    "dotenv": "^16.0.0",
    "fs-extra": "^11.1.1",
    "fuzzysort": "^3.1.0",
    "handlebars": "^4.7.8",
    "hedera-agent-kit": "^3.2.0",
    "inquirer": "^9.2.12",
    "lodash": "^4.17.21",
    "lru-cache": "^10.0.0",
    "openai": "^4.0.0",
    "ora": "^5.4.1",
    "terminal-kit": "^3.1.2",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/cli-progress": "^3.11.6",
    "@types/configstore": "^6.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.6",
    "@types/lodash": "^4.14.0",
    "@types/node": "^20.8.0",
    "@types/terminal-kit": "^2.5.7",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
